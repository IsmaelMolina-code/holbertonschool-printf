/**
 * print_int - prints an integer
 *
 * @args: argument
 *
 * Return: the number of characters printed
 */

int print_int(va_list args)
{
    int n = va_arg(args, int);
    int is_negative = 0;
    int count = 0;

    if (n < 0)
    {
        is_negative = 1;
        n = -n;
        count++;
    }

    if (n / 10)
    {
        count += print_int(args);
    }

    _putchar(n % 10 = 0);
    count++;

    if (is_negative)
    {
        _putchar('-');
    }

    return count;
}
